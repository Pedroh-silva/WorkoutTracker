@model Workout_Tracker.Models.Workout
@{
}
<style>
	.main {
		width: 1200px;
		height: fit-content;
		display: flex;
		justify-content: center;
		/*background-color: red;*/
	}

	.a {
		width: 600px;
		height: 150px;
		/*background-color: blue;*/
	}

	.b {
		width: 600px;
		height: 150px;
		/*background-color: green;*/
	}

	.c {
		width: 600px;
		height: 150px;
		/*background-color: yellow;*/
	}

	.box {
		background-color: #fff;
		transform: scale(1);
		box-shadow: 0 0 10px #555;
		-webkit-border-radius: 10px;
		white-space: nowrap;
	}

	.box-a {
		width: fit-content;
		height: 30px;
		margin-top: 30px;
	}

	.box-b {
		width: fit-content;
		height: fit-content;
		margin-top: 30px;
	}

	caption {
		caption-side: top;
		text-align: center;
		color: black;
		margin-bottom: -5px;
		border-bottom: 2px solid;
		font-weight: bold;
	}

	.box2 {
		background-color: #fff;
		transform: scale(1);
		box-shadow: 0 -1px 5px #555;
		-webkit-border-radius: 10px;
		white-space: nowrap;
		-webkit-border-bottom-right-radius: 0px;
		-webkit-border-bottom-left-radius: 0px;
	}

	.quebra {
		width: 1200px;
		height: 10px;
		/*background-color: darkorange;*/
	}
	.dist{
		margin-bottom:3px;
	}
	.btn-efeito {
  overflow:hidden;
  position:relative;
  background-color:#525c64; 
  color:white;
}
.btn-efeito:hover {
  background-color:#a8a8a8; 
  color:white;
}
.btn-efeito span {
  z-index: 20;
}
.btn-efeito:after {
  background: #fff;
  content: "";
  height: 155px;
  left: -85px;
  opacity:.4;
  position: absolute;
  top: -60px;
  -webkit-transform: rotate(30deg);
          transform: rotate(30deg);
  -webkit-transition: all 850ms cubic-bezier(0.19, 1, 0.22, 1);
  transition: all 850ms cubic-bezier(0.19, 1, 0.22, 1);
  width: 70px;
  z-index:1;
}
.btn-efeito:hover:after {
  left: 130%;
  -webkit-transition: all 850ms cubic-bezier(0.19, 1, 0.22, 1);
  transition: all 850ms cubic-bezier(0.19, 1, 0.22, 1);
}
</style>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<h1>Detalhes do treino</h1>
<div class="main" id="Vermelho">
	<div class="a" id="azul">
		<div class="box box-a">
			<table class="table table-hover box dist">
				<caption style="margin-bottom:-10px;" class="box2">&nbsp Nome &nbsp</caption>
				<tr></tr>
				<tbody>
					<tr>
						<td align="center">@Html.DisplayFor(x => x.Name)</td>
					</tr>
				</tbody>
			</table>
			<table class="table table-hover box dist">
				<caption style="margin-bottom:-10px;" class="box2">&nbsp Data e hora &nbsp</caption>
				<tr></tr>
				<tbody>
					<tr>
						@{var dateTime = Model.DateTime;}
						<td>@dateTime.ToString("g")</td>
					</tr>
				</tbody>
			</table>
			<table class="table table-hover box">
				<caption style="margin-bottom:-10px;" class="box2">&nbsp Duração &nbsp</caption>
				<tr></tr>
				<tbody>
					<tr>
						@{var duration = Model.Duration;}
						<td align="center">&nbsp @duration.ToString(@"hh\:mm")<img style="margin-bottom:3px; margin-left:3px;" width=15px height=15px src=~/lib/Images/Clock.png></td>
					</tr>
				</tbody>
			</table>
			<button class="btn btn-efeito">Editar</button>
		</div>
		<img style="margin-left:145px; margin-top:-30px;" src="~/lib/Images/line3.png" />
	</div>
	<div class="b" id="Verde">
		<div class="box box-b" style="margin-top:40px">
			<p style="border-bottom:2px solid; font-weight:bold">
				&nbsp	Exercícios realizados: &nbsp
				@Model.Exercises.Count <img style="margin-bottom:3px; margin-left:2px;" width=25px height=25px src=~/lib/Images/dumbell.png>
			</p>
			<ul style="margin-top:-5px">
				@foreach (var item in Model.Exercises)
				{
					@foreach (var muscle in item.Muscles)
					{
						<li style="margin-bottom:10px;" class="box"> &nbsp @item.Name (@muscle.Name) <a class="btn" ><i class="material-icons">edit</i></a> </li>
					}

				}
				&nbsp
			</ul>

		</div>
	</div>
	<div class="c" id="Amarelo">
		<div class="box box-a">
		</div>
	</div>
</div>
<div class="quebra"></div>
<div class="main">
</div>


.btn-efeito {
  overflow:hidden;
  position:relative;
  background-color:#525c64; 
  color:white;
}
.btn-efeito:hover {
  background-color:#a8a8a8; 
  color:white;
}
.btn-efeito span {
  z-index: 20;
}
.btn-efeito:after {
  background: #fff;
  content: "";
  height: 155px;
  left: -85px;
  opacity:.4;
  position: absolute;
  top: -60px;
  -webkit-transform: rotate(30deg);
          transform: rotate(30deg);
  -webkit-transition: all 850ms cubic-bezier(0.19, 1, 0.22, 1);
  transition: all 850ms cubic-bezier(0.19, 1, 0.22, 1);
  width: 70px;
  z-index:1;
}
.btn-efeito:hover:after {
  left: 130%;
  -webkit-transition: all 850ms cubic-bezier(0.19, 1, 0.22, 1);
  transition: all 850ms cubic-bezier(0.19, 1, 0.22, 1);
}
.btn-efeito2 {
  overflow:hidden;
  position:relative;
  background-color:#014d22; 
}
.btn-efeito2:hover {

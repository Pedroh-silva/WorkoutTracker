<section id="Cadastro_cabecalho">
		<h1 style="font-family:Garamond">@ViewData["Title"]</h1>
</section>
<div id=cadastro_conteudo>
	<a id="btn_incluir" asp-action="Create" class="btn btn-efeito2">Incluir novo treino</a>
	<a id="btn_statistic" class="btn btn_statistic btn-efeito " asp-action="Statistic">Ver estátisticas</a>
</div>	
@foreach(var item in Model)
{
<div class="flex-box">
<div id="container-c" class="a"></div>

	</div>
<div id="container-c" class="e">
	<img  src=~/lib/Images/line3.png>
</div>
	<div id="container-b" class="c">
			<table class="table table-hover box">
				<caption style="margin-bottom:-15px;" class="box2">@item.Name</caption>
			<thead>
				<tr>
				<th class="cor"></th>
				<th class="cor"></th>
				<th class="cor"></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td class="borda">@item.Exercises.Count()&nbsp<img style="margin-bottom:3px;" width=25px height=25px src=~/lib/Images/dumbell.png></td>
					<td class="borda">@item.Duration.ToString(@"hh\:mm")&nbsp<img style="margin-bottom:3px;" width=15px height=15px src=~/lib/Images/Clock.png></td>
					<td class="borda">
						<a class="btn btn-Detalhes btn-efeito" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
					</td>
